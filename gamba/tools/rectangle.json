{
    name: "Rectangle",
    icon: "images/draw-rectangle-2.png",
    select: function() {
        $("svg#svgimage").css({
            cursor: "crosshair"
        })
        $("svg#svgimage").mousedown(function() {
            var svgNS = "http://www.w3.org/2000/svg"
            var rectangle = document.createElementNS(svgNS, "rect")
            $(rectangle).attr({
                x: event.pageX - 30,
                y: event.pageY,
            })
            $(this).append(rectangle)
            $(document).mousemove(function() {
                $(rectangle).attr({
                    width: Math.abs(event.pageX - $(rectangle).attr("x") - 30),
                    height: Math.abs(event.pageY - $(rectangle).attr("y")),
                })
            })
            $("svg#svgimage").mouseup(function() {
                $(document).unbind("mousemove")
            })
        })
    },
    unselect: function() {
        $("svg#svgimage").unbind("mousedown")
        $("svg#svgimage").css({
            cursor: "auto"
        })
    }
}
